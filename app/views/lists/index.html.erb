<h1>Listing lists</h1>

<h2>JS List#index</h2>
<div class='lists'>
</div>
<h2>Scaffolded Listings</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Comment</th>
    <th>Done</th>
    <th>Tags</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.name %></td>
    <td><%= list.comment %></td>
    <td><%= list.done %></td>
    <td><%= list.tags %></td>
    <td><%= list.users %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

