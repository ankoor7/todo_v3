<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Comment</th>
    <th>Done</th>
    <th>Tags</th>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.comment %></td>
    <td><%= item.done %></td>
    <td><%= item.tags %></td>
    <td><%= item.item %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

